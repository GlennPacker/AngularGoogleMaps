
<script src="~/Scripts/jquery-1.11.3.js"></script>
<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
    function Initialize() {
        var mapOptions = {
            center: new google.maps.LatLng(50.87, 0.25),
            zoom: 14,
            disableDefaultUI: true,
            overviewMapControl: true,
            overviewMapControlOptions: { opened: true }
        };
        var gmap = new google.maps.Map(document.getElementById('mapdiv'), mapOptions);
    };

    google.maps.event.addDomListener(window, "load", Initialize);

    
</script>

<div id="mapdiv" style="height:400px;"></div>

<div class="container">
    <div class="col-xs-6">
        <h3 class="heading">Disable</h3>
        <p class="codeblock">
            var mapOptions = {
            center: new google.maps.LatLng(50.87, 0.25),
            zoom: 14,
            disableDefaultUI: true
            };
        </p>

        <h3 class="heading">Zoom</h3>
        <p class="codeblock">
            var mapOptions = {
            center: new google.maps.LatLng(50.87, 0.25),
            zoom: 14,
            disableDefaultUI: true,
            zoomControl: true
            };
        </p>

        <h3 class="heading">Pan</h3>
        <p class="codeblock">
            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                disableDefaultUI: true,
                panControl: true
            };
        </p>

        <h3 class="heading">Map Type</h3>
        <p class="codeblock">
            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                disableDefaultUI: true,
                mapTypeControl: true
            };

            Specify allowed map types

            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                disableDefaultUI: true,
                mapTypeControl: true,
                mapTypeControlOptions: {
                    mapTypeIds: [google.maps.MapTypeId.ROADMAP, google.maps.MapTypeId.HYBRID],
                    style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
                }
            };
            </p>

        
    </div>

    <div class="col-xs-6">
        <h3 class="heading">Scale</h3>
        <p class="codeblock">
            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                disableDefaultUI: true,
                scaleControl: true
            };
        </p>

        <h3 class="heading">Street View</h3>
        <p class="codeblock">
            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                disableDefaultUI: true,
                streetViewControl: true
            };
        </p>

        <h3 class="heading">Rotate</h3>
        <p>
            Rotate is only available in satelite mode and only in some areas.
        </p>
        <p class="codeblock">
            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                mapTypeId: google.maps.MapTypeId.SATELLITE,
                disableDefaultUI: true,
                rotateControl: true
            };
        </p>

        <h3 class="heading">Overview</h3>
        <p class="codeblock">
            var mapOptions = {
                center: new google.maps.LatLng(50.87, 0.25),
                zoom: 14,
                disableDefaultUI: true,
                overviewMapControl: true
                overviewMapControlOptions: { opened: true; }
            };
        </p>
    </div>

</div>

